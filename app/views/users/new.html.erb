<h1> Sign up</h1>

<% if @new_user.errors %>
<ul>
  <% @new_user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @new_user, url: '/users' do |f| %>

 <%= f.label :username %>
 <%= f.text_field :username %>

 <%= f.label :password %>
 <%= f.password_field :password %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.submit %>

<% end %>