
<%= form_for :new_post, url: '/storages' do |t| %> 

  <%= t.label :title %>
  <%= t.text_field :title %>
  <br>
  <%= t.label :price %>
  $<%= t.number_field :price %> an hour<br>

  <%= t.label :location %>
  <%= t.text_field :location %>
  <br>
  <%= t.label :description %>
  <br>
  <%= t.text_area :description, size: '24x6' %>

  <%= t.submit "Create posting" %>
<% end %>